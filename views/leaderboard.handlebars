					<input type="text" name="teamTwo" value="" placeholder="the other Team" data-subline="For example: <em>Circuit Breakers</em> or <em>Nuts and Bolts</em>" required/>
					
					<div class="nl-submit-wrap">
						<button class="nl-submit" type="submit">Get the Team Members</button>
						
					</div>
					<div class="nl-overlay"></div>

				
				</form>
